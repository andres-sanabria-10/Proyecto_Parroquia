<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./templates/header.ejs') %>
</head>

<body>
    <header class="d-flex flex-wrap justify-content-center py-3 pe-5 mb-4 border-bottom me-auto">
        <%- include('./navegation.ejs') %>
    </header>

    <div class="container-fluid ps-md-0">
        <div class="row g-0">
          <div class="d-none d-md-flex col-md-3 col-lg-5 bg-image"></div>
          <div class="col-md-3 col-lg-6">
            <div class="login d-flex align-items-center py-4">
              <div class="container">
                <div class="imagen-colapso">
                  <center><img id="imagen-evento" src="/img/evento.jpg?v=1" class="img-thumbnail" alt="no carga"></center>
                  <div class="collapse" id="collapseContent" data-bs-parent="#collapseContent">
                    <div class="col-md-0 col-lg-11 mx-auto transicion" style="background-color: antiquewhite;">
                      <center>
                        <h3 class="login-heading mb-4">Bienvenido</h3>
                      </center>
                      <h3 class="login-heading mb-4">parroquia de nuestra señora de la medalla milagrosa del municipio de Santa María Boyacá</h3>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <script>
        const collapseContent = document.getElementById('collapseContent');
        const imagenEvento = document.getElementById('imagen-evento');
        const transicionDiv = document.querySelector('.transicion');
      
        collapseContent.addEventListener('show.bs.collapse', () => {
          transicionDiv.style.display = 'none';
        });
      
        collapseContent.addEventListener('shown.bs.collapse', () => {
          imagenEvento.style.display = 'none';
          transicionDiv.style.display = 'block';
        });
      
        collapseContent.addEventListener('hide.bs.collapse', () => {
          transicionDiv.style.display = 'none';
        });
      
        collapseContent.addEventListener('hidden.bs.collapse', () => {
          imagenEvento.style.display = 'block';
        });
      </script>
    <footer>
        <%-include('./templates/footer.ejs')%>
    </footer>
</body>

</html>